---
import { Image } from "@astrojs/image/components";
import Layout from "src/layouts/Layout.astro";
import CallToAction from "src/sections/CallToAction.astro";
import ReviewSection from "src/sections/ReviewSection.astro";
---

<Layout
  seo={{
    metaTitle: "About | Simply Sprout",
    metaDescription: "CHANGE THIS FOR SEO",
  }}
>
  <section class="px-edge py-20">
    <div class="mx-auto max-w-screen-xl text-center">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-5xl font-bold">
          We Simplify Marketing For Busy Business Owners
        </h1>
        <p class="mt-2 text-xl uppercase">
          More <span class="font-bold text-primary">Visibility</span>, More
          <span class="font-bold text-primary">Customers</span>, More <span
            class="font-bold text-primary">Time</span
          >
        </p>
        <p class="mt-2 text-lg leading-relaxed">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab fugit,
          aliquam voluptates animi accusamus provident delectus perferendis!
          Repudiandae similique aspernatur eius, ex doloribus nemo minus quidem
          doloremque neque facilis nesciunt.
        </p>
      </div>
      <div class="mt-5 h-[550px] w-full bg-red-50">1280x550</div>
    </div>
  </section>

  <section class="px-edge py-10">
    <div class="mx-auto max-w-screen-xl">
      <div
        class="mx-auto flex max-w-screen-xl flex-col-reverse items-start justify-between gap-5 md:flex-row"
      >
        <div class="shrink grow-0">
          <Image
            class="rounded-full max-w-[500px] h-[500px] object-cover"
            src={import("@img/about/headshot-schneider.jpg")}
            alt="founder - clayton schneider"
          />
        </div>
        <div class="max-w-xl text-center md:text-left">
          <p class="text-2xl font-medium text-accent">Our Story</p>
          <h2 class="text-5xl font-bold">How It All Started</h2>
          <p class="mt-5 text-lg leading-relaxed">
            Every business needs a website. Get the most out of yours with a
            website that is custom designed to match your business&apos; needs
            and branding.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="px-edge py-10">
    <div class="mx-auto max-w-screen-xl">
      <div
        class="mx-auto mt-10 flex max-w-screen-xl flex-col items-start justify-between gap-5 md:flex-row"
      >
        <div class="max-w-xl text-center md:text-left">
          <p class="text-2xl font-medium text-accent">
            Environmentally Conscious
          </p>
          <h2 class="text-5xl font-bold">We Like Green</h2>
          <p class="mt-5 text-lg leading-relaxed">
            Every business needs a website. Get the most out of yours with a
            website that is custom designed to match your business&apos; needs
            and branding.
          </p>
        </div>
        <div class="shrink grow-0">
          <Image
            class="max-w-[500px] h-[500px] object-cover"
            src={import("@img/about/headshot-schneider.jpg")}
            alt="founder - clayton schneider"
          />
        </div>
      </div>
    </div>
  </section>

  <CallToAction />
  <ReviewSection />
</Layout>
