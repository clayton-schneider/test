---
import { Icon } from "astro-icon";

export interface Props {
  data: {
    icon: string;
    title: string;
    description: string;
  };
}
const { data } = Astro.props;
---

<div
  class="group h-full w-full max-w-md rounded border-2 border-primary bg-white p-5 text-center shadow transition-all duration-75 hover:bg-primary hover:text-white"
>
  <div
    class="mx-auto inline-block rounded-full bg-primary p-5 duration-75 group-hover:bg-white"
  >
    <Icon
      name={data.icon}
      size={50}
      class="group-hover:text-primary text-white transition-all duration-75"
    />
  </div>

  <p class="mt-5 text-3xl font-bold">{data.title}</p>
  <p class="mt-2">
    {data.description}
  </p>
</div>
