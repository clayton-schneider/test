---
import { Icon } from "astro-icon";
import NavMenu from "./NavMenu";
const links = [
  { linkText: "About", link: "/about" },
  {
    linkText: "Services",
    link: "/services",
    sublinks: [
      { link: "/services/the-foundation", linkText: "The Foundation" },
      { link: "/services/the-cleanup", linkText: "The Cleanup" },
      { link: "/services/the-flourishing", linkText: "The Flourishing" },
    ],
  },
  { linkText: "Pricing", link: "/pricing" },
  { linkText: "Contact", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header class={(className ? className : "") + " p-5 relative "}>
  <div class="mx-auto flex max-w-screen-xl items-center justify-between">
    <a href="/" class="font-logo text-2xl">
      <Icon name="logo" class="w-[158px] h-[60px]" />
    </a>

    <NavMenu links={links} client:load />
  </div>
</header>
