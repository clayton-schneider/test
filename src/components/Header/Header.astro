---
import NavMenu from "./NavMenu";
const links = [
  { linkText: "About Us", link: "/about" },
  {
    linkText: "Scholarships",
    link: "/scholarships",
  },
  { linkText: "Success Stories", link: "/success-stories" },
  { linkText: "Contact Us", link: "/contact" },
];

interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<header
  class={(className ? className : "") +
    " p-5 flex items-center justify-between relative"}
>
  <a href="/" class="font-logo text-2xl">Roxbury Scholarship Foundation</a>

  <NavMenu links={links} client:load />
</header>
